/* pages/hy/hy.wxss */
.pageFixed{
  background-color: #fff;
}
.pageFixed .bg{
  background-color: #3f3735;
  width: 100%;
  height: 476rpx;
}
.tab {
  font-size: 40rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
}
.tab view{
  padding: 20rpx 0;
  
}
.tab view.active{
  border-bottom: 4rpx solid #f5e6d3;
}

.icons{
  width: 710rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  border-radius: 8rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 0;
  background-color: #f5e6d3;
}
.icons .icons-item{
  width: 25%;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 10rpx 0;
  margin-bottom: 40rpx;
  color: #232629;
}
.icons .icons-item i {
  font-size: 45rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 23rpx;
  color: #f5e6d3;
  background-color: #3f3735;
}


.list{
  margin-top: 120rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 10rpx;
  justify-content: space-between;
}
.list-item{
  flex: 1;
  box-sizing: border-box;
  border: 1px solid #dbc6b1;
  
  border-radius: 14rpx;
  margin: 0 10rpx;
  text-align: center; 
}
.list-item.active{
  background-color: rgba(219,198,177,0.3);
}
.list-item .name{
  font-size: 32rpx;
  padding: 45rpx 0;
}
.list-item .money{
  color: #a36952;
  font-size: 24rpx;
}
.list-item .money text{
  color: #a36952;
  font-size: 46rpx;
}
.dmoney{
  font-size: 30rpx;
  padding: 25rpx;
  color: #b3afac;
  text-decoration: line-through;
}
.dist{
  font-size: 28rpx;
  color: #919191;
  padding: 40rpx 20rpx;
}
.dist text{
  color: #f4dfcf;
}
.mm{
  background-color: #f3f3f3;
  padding: 20rpx 0;
  padding-bottom: 144rpx;
}
.ber{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 110rpx;
  border-bottom: 1px solid #f3f3f3;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 34rpx;
  background-color: #fff;
}
.ber.b{
 font-weight: bolder; 
}
.m{
  margin-top: 20rpx;
}
.m text{
  color: #979797;
  font-size: 30rpx;
}
.m .right i {
  color: #979797;
}
.btnBox{
  background-color: #fff;
  padding: 20rpx 0;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}
.btnBox .wi-submitBtn{
  color: #f5e6d3;
  margin: 0 auto;
  background-color: #3f3735; 
  position: static;
}
.btnBox .wi-submitBtn text{
  color: #f5e6d3;
}


.hyCard{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.5);
}
.hyCardCon{
  background-color: #fff;
  padding: 20rpx 10rpx;
}
.hyCardCon .name {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 34rpx;
}
.hyCard .wi-submitBtn {
  margin: 0 auto;
  margin-top: 40rpx;
  /* background-color: #3f3735; */
  position: static;

}
.hyCard .mn .wi-submitBtn{
  background-color: rgba(0,0,0,0);
  margin-top: 0;
}
.hyCard .mn text{
  color: #2AB1E7;
  font-size: 28rpx;
}
.cardImg {
  width: 686rpx;
  height: 280rpx;
  margin: 20rpx auto;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.cardImg  .bg{
 position: absolute;
 top: 0;
 left: 0;
 width: 100%;
 height: 100%;
}
.cardImg .price{
  position: absolute;
  width: 168rpx;
  height: 64rpx;
  right: 0;
  top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #C25900;
}
.cardImg.col .price{
  color: #fff;
}
.cardImg .price text{
  position: relative;
  z-index: 1;
}
.cardImg .price image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}

.cardImg .c{
  position: relative;
  z-index: 1;
  text-align: center;
  color: #D27B00;
}
.cardImg  .c image{
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 24rpx;
}
.cardImg  .c .name{
  height: 34rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  line-height: 34rpx;
  text-align: center;
}
.cardImg  .c .time{
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  
  line-height: 24rpx;
  margin-top: 16rpx;
  text-align: center;
}
.cardImg.col .c{
  color: #fff;
}