.wi-tabs{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 80rpx;
  align-items: center;
}
.wi-tabs .active{
  color: blue;
}
.swiper-text{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 60rpx;
}

.icons{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 0;
  margin: 40rpx 0;
}
.icons .icons-item{
  width: 33.3%;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 10rpx 0;
}
.icons .icons-item image {
  width: 100rpx;
  height: 100rpx;
}

.title{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
}
.title .moreBtn{
  color: blue;
}
.bookList{
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.bookList .book{
  width: 30%;
}

.aboutList{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  height: 250rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.aboutList view{
  flex: 1;
  margin: 0 10rpx;
  border: 1px solid #666;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}


.bookType{
  margin-top: 50rpx;
  background-color: #f3f3f3;
}
.bookType .type-item{
  background-color: #fff;
  margin-bottom: 40rpx;
}
.bookType .bookList .book{
  width: 48%;
}


.shopList{
  width: 100%;
  padding: 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}
.shop{
  width: 47%;
  margin: 20rpx 0;
}
.shop image {
  width: 300rpx;
  height: 300rpx;
}
.shop .name{
  font-size: 30rpx;
  width: 100%;
  height: 35rpx;
  line-height: 35rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.shop .bottom {
  width: 100%;
  margin-top: 20rpx;
  color: red;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}