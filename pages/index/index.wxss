.top{
  width: 100%;
  height: 427rpx;
  margin-bottom: 125rpx;
  background-color: #FF8D40;
  border-bottom-left-radius: 30%;
  border-bottom-right-radius: 30%;
}
.topNavBar .lxy-nav-bar__center{
    /* display: none; */
