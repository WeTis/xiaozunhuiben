/* pages/shop/list/list.wxss */
.list{
  width: 100%;
  height: 100%;
  padding: 15rpx;
  box-sizing: border-box;
  overflow: auto;
  background-color: #f3f3f3;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
}
.item{
  width: 330rpx;
  height: 450rpx;
  margin: 15rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}
.item .img{
  width: 330rpx;
  height: 330rpx;
}
.item .img image{
  width: 100%;
  height: 100%;
}
.item .content{

}
.content .name{
  width: 100%;
  padding: 10rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #232629;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.content .price-card{
  width: 100%;
  padding: 0 10rpx;
  height: 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.price-card .price{
  color: #e1251b;
  font-size: 24rpx;
}
.price-card .price text{
  font-size: 36rpx;
}
.price-card .card{
  /* width: 100rpx; */
  text-align: center;
}
.price-card .card i {
  color: #d3d3d3;
}