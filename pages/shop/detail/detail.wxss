/* pages/book/book.wxss */
.bookDetail {
  background-color: #F7F7FA;
  overflow: hidden; 
}
.imgs{
  width: 100%;
  height: 546rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.imgs image{
   /* width: 100%; */
   height: 100%;
}

.pro{
  background-color: #fff;
  /* margin-bottom: 40rpx; */
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.pro .title{
  font-size: 34rpx;
  font-weight: 500;
  color: #232629;
  line-height: 48rpx;
}
.pro .lab{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  margin: 20rpx 0;
  margin-bottom: 0;
}
.pro .lab .lab-item{
  height: 40rpx;
  background: #FFF7EE;
  border-radius: 20rpx;
  line-height: 40rpx;
  padding: 0 26rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #FFB85C;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}
.authorAll{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 35rpx;
}
.pro .author{
  flex: 1;
  font-size: 26rpx;
  font-weight: 400;
  color: #232629;
  line-height: 37rpx;
  /* margin-bottom: 20rpx; */
}
.author text {
  color: #e1251b;
  font-size: 30rpx;
}
.introduce{
  width: 710rpx;
  height: 76rpx;
  margin: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  background-color: #fff;
}
.introduce .l{
  font-size: 26rpx;
  font-weight: 400;
  color: #232629;
}
.introduce .c{
  flex: 1;
  font-size: 26rpx;
  font-weight: 400;
  color: #B3B8BC;
  padding: 0 30rpx;
}
.introduce i{
  padding-left: 10rpx;
  font-size: 20rpx;
}

.stepBOxAll{
  width: 710rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.stepBox {
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  
}
.stepBox2 {
  padding-top: 50rpx;
}
.stepBox .title{
  display: flex;
  flex-direction: row;
  align-items: center;

}
.stepBox .title .name{
  flex: 1;
  font-size: 26rpx;
  font-weight: 500;
  color: #232629;
}
.stepBox .title .moreBtn{
  font-size: 26rpx;
  color: #8C9196;
}
.stepBox .title .moreBtn i{
  padding-left: 10rpx;
  font-size: 26rpx;
  color: #8C9196;
}
.step{
  display: flex;
  width: 100%;
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}
.step .step-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.step-item iconfont{
  font-size: 60rpx;
}
.step-item .p{
  position: absolute;
  right: -12rpx;
  top: 18rpx;
  font-size: 24rpx;
  color: #8C9196;
}
.step-item text{
  font-size: 22rpx;
  color: #232629;
  padding-top: 10rpx;
}

.evaluateList{
  width: 710rpx;
  padding: 20rpx;
  margin: 0 auto;
  box-sizing: border-box;
  background: #FFFFFF;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.de{
  width: 710rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 120rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.de .text{
  padding: 20rpx 0;
  font-size: 30rpx;
  text-align: 52rpx;
  color: #999;
  line-height: 50rpx;
}
.de image{
  width: 100%;
}

.lists{
  margin: 20rpx 0;
}

.buyBox{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  background-color: #fff;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}
.buyBox .left{
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: center;
  font-size: 18rpx;
  
  font-weight: 400;
  color: #8C9196;
  position: relative;
}
.buyBox .left button{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  width: 100%;
}
.buyBox .left text{
  line-height: 18rpx;
}
.buyBox .left i{
  color: #8C9196;
  font-size: 40rpx;
  /* padding-bottom: 12rpx; */
}
.buyBox .right{
  flex: 1;
  height: 100%;
  /* background-color: #06A4E3; */
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.cardBtn{
  background-image: linear-gradient(135deg,#f2140c,#f2270c 70%,#f24d0c);
  line-height: 76rpx;
  height: 76rpx;
  text-align: center;
  color: #fff;
  font-size: 26rpx;
  border-radius: 43rpx;
  margin: 12rpx 10rpx 0 0;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.pay{
  background-image: linear-gradient(135deg,#ffba0d,#ffc30d 69%,#ffcf0d);
}
.propBox{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  z-index: 999;
}
.propBox .shadow{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  z-index: 0;
}
.propBox .content{
  position: relative;
  padding-top: 40rpx;
  flex: 1;
  background-color: #fff;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.propBox .content .item{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}
.propBox .left{
  width: 160rpx;
  text-align: center;
}
.propBox .left i{
  font-size: 50rpx;
  color: #999;
}
.propBox .right{
  flex: 1;
  font-size: 24rpx;
  color: #999;
}
.propBox .closeBtn{
  position: absolute;
  right: 40rpx;
  top: 20rpx;
  font-size: 50rpx;
}