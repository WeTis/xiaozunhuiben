/* pages/shop/index/index.wxss */
.pageBOx{
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding-bottom: 100rpx;
  overflow: auto;
}
.nav{
  width: 100%;
  height: 98rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  box-shadow: 0px -1px 0px 0px #DADDE3;
  display: flex;
  justify-content: space-around;
}
.nav .item-nav{
  height: 98rpx;
 flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #8C9196;
}
.nav .item-nav i{
  font-size: 40rpx;
  color: #8C9196;
  padding-bottom: 8rpx;
}
.nav .active{
  color: #82D1FF;
}
.nav .active i{
  color: #82D1FF;
}