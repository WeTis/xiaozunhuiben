/* pages/login/login.wxss */
.pageFixed{
  background-color: #FFFFFF;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.center{
  width: 689rpx;
}
.center image{
  width: 435rpx;
  height: 478rpx;
  margin: 0 127rpx;
}
.btns{
  margin-top: 180rpx;
}
.btn{
  width: 689rpx;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  background: #06A4E3;
  box-shadow: 0px 7px 14px 0px rgba(49, 165, 218, 0.32), 0px -5px 0px 0px rgba(228, 247, 255, 0.28);
  border-radius: 60rpx;
  font-size: 38rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  position: relative;
}
.btn button {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  opacity: 0;
}
.text{
  height: 42rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #06A4E3;
  line-height: 42rpx;
  margin-top: 38rpx;
  text-align: center;
}