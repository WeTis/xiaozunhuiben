@import './utils/iconfont1.wxss';

page{
  font-family: PingFangSC-Regular, PingFang SC;
}
.pageFixed{
  background-color: #f1f1f1;
  overflow: auto;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

/* 表单样式 */
.wi-table{
  margin: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.wi-table .item{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.wi-table .item .left{
  width: 160rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
}
.wi-table .item .right{
  flex: 1;
  height: 88rpx;
}
.wi-table .item .right.textarea{
  flex: 1;
  height: 188rpx;
}
.wi-table .item .right textarea{
  width: 100%;
  height: 180rpx;
  font-size: 28rpx;
  color: #8C9196;
}
.wi-table .item .right input{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #8C9196;
}
.wi-table .item .iconNext{
  text-align: right;
  line-height: 88rpx;
  color: #8C9196;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.wi-table .iconNext picker{
  flex: 1;
}
.wi-table .iconNext .picker{
  text-align: left;
  font-size: 28rpx;
  color: #8C9196;
}






