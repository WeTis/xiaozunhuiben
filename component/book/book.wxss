/* component/book/book.wxss */
.wi-book{
  width: 100%;
  height: 100%;
}
.wi-book .image{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.wi-book .image image{
   width: 200rpx;
  height: 200rpx;
}
.wi-book .name{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.wi-book .labs {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.labs .lab{
  padding: 5rpx 10rpx;
  border-radius: 4rpx;
  background-color: red;
  color: #fff;
  font-size: 24rpx;
}

